@using WebApplication2.Models.ViewModels
@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="container my-3">
    <h1>@ViewData["Title"]</h1>
    <div class="table-responsive">
        <table class="table table-hover">

            <thead class="thead-light">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-controller="UserRoles"
                               asp-action="Manage" asp-route-userId="@user.UserId"
                               title="Manage roles for @user.FirstName @user.LastName">
                                <span class="fas fa-edit"></span> Manage
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</main>
