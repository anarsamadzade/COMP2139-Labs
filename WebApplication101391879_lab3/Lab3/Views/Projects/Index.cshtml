@model List<Project>
@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th> 
                <th>Name</th> 
                <th>Description</th> 
                <td>Actions</td>
                <!-- Add another project properties as needed -->
            </tr>
        </thead>

        <tbody>
            <!-- A foreach loop is used to iterate over each Project in the model and display its properties in the table rows -->
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a>
                    </td>
                    <!-- Render another project properties as needed -->
                </tr>
            }
        </tbody> 
    </table>
}
else
{
    <p>No Projects</p>
}

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Create">Create Project</a>
</p>